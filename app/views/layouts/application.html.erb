<!DOCTYPE html>
<html>
  <head>
    <title>FSP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Sunshiney|ZCOOL+KuaiLe&display=swap" rel="stylesheet">
    <script src="https://use.fontawesome.com/2af014eb75.js"></script>

    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'entry' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js"></script>

    <% if logged_in? %>
      <script type="text/javascript">
        window.currentUser =
          <%= (current_user.to_json).html_safe %>;
        window.wallet = 
          <%= current_user.watchlist.coins.map{|el| el['name'] = {name: el['name'], id: el['id']} }.to_json.html_safe %>
      </script>
  <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
